<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="统计查询"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 时间范围选择 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timeRangeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/titleText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间范围"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/startDateButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="开始日期"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 至 "
                        android:layout_marginHorizontal="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/endDateButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="结束日期"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/timeRangeChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/todayChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/weekChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本周"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/monthChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本月"/>
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 分诊等级分布统计 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/triageLevelCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/timeRangeCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分诊等级分布"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/triageLevelPieChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 科室就诊分布统计 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/departmentDistributionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/triageLevelCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科室就诊分布"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/departmentBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 等待时间统计 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/waitingTimeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/departmentDistributionCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等待时间统计"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/waitingTimeLineChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 分诊准确率统计 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/accuracyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/waitingTimeCard"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分诊准确率统计"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TableLayout
                    android:id="@+id/accuracyTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:stretchColumns="*">

                    <TableRow
                        android:background="@android:color/darker_gray"
                        android:padding="8dp">
                        <TextView
                            android:text="科室"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:text="总人数"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:text="准确数"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:text="准确率"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView> 