<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 个人信息卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profileCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- 头像 -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatarImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    app:shapeAppearanceOverlay="@style/CircleImageView"/>

                <!-- 个人信息 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="管理员"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/roleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="系统管理员"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/departmentText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信息科"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- 编辑按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editProfileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 统计数据卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/profileCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- 今日分诊量 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/todayTriageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="128"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日分诊量"/>
                </LinearLayout>

                <!-- 活跃规则数 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/activeRulesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活跃规则"/>
                </LinearLayout>

                <!-- 准确率 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/accuracyRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="95%"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="准确率"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 功能菜单 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/statsCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- 系统管理 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/systemManageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="系统管理"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    app:icon="@android:drawable/ic_menu_manage"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>

                <!-- 用户管理 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/userManageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用户管理"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    app:icon="@android:drawable/ic_menu_myplaces"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>

                <!-- 数据分析 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dataAnalysisButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="数据分析"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    app:icon="@android:drawable/ic_menu_info_details"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>

                <!-- 日志查看 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logViewButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="日志查看"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    app:icon="@android:drawable/ic_menu_recent_history"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>

                <!-- 系统设置 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="系统设置"
                    android:gravity="start|center_vertical"
                    android:padding="16dp"
                    app:icon="@android:drawable/ic_menu_preferences"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 退出登录按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/menuCard"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView> 